@model IEnumerable<Movie>

<a asp-action="Create" asp-controller="Movies" class="btn btn-primary">Add a new Movie</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Rating</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td>@movie.Name</td>
                <td>@movie.Description</td>
                <td>@movie.Rating</td>
                <td>Edit|Delete</td>
            </tr>
        }
    </tbody>
</table>